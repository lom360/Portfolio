<section id="contact">
  <div id="input-fields" class="container">
    <div class="row">
      <div id="info" class="col-lg-12">
        <h1>Contact Me</h1>
        <h5>
          Email: <a class="theme-color" href="mailto:sthin@csumb.edu">sthin@csumb.edu</a> ||
                 <a class="theme-color" href="mailto:sarom_thin@outlook.com">sarom_thin@outlook.com</a>
        </h5>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <form id="contact-form" method="post" action="/">
          <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <input type="email" class="form-control" id="email" name="email" placeholder="Email*">
                </div>
                <div class="emailStatus"></div>
                <div class="form-group">
                  <input type="name" class="form-control" id="name" name="name" placeholder="Name*">
                </div>
                <div class="nameStatus"></div>
                <div class="form-group">
                  <input type="subject" class="form-control" id="subject" name="subject" placeholder="Subject">
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <textarea class="form-control" placeholder="Message*" name="message" id="message" data-validation-required-message="Please enter a message." style="height:219px"></textarea>
                </div>
                <div class="messageStatus"></div>
              </div>
              <div class="col-lg-12"><button type="submit" onclick="validateForm" class="btn btn-primary contact-btn">Send Message</button></div>
          </div>
        </form>
      </div>
    </div>
</section>

